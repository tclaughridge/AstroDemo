---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astro Demo</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            color: #ffffff;
            padding: 10px 20px;
        }
        .navbar a {
            color: #ffffff;
            text-decoration: none;
            margin-left: 20px;
        }
        .navbar a:hover {
            text-decoration: underline;
        }
        .brand-title {
            font-weight: bold;
        }
        .content {
            padding: 20px;
        }
        .headline {
            color: #333;
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }
        .text {
            color: #555;
            font-size: 18px;
            text-align: center;
            max-width: 600px;
            margin: auto;
        }
        .theme-color {
            color: #007BFF;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="brand-title">Astro Demo</div>
        <div>
            <a href="#">Home</a>
            <a href="#">Page 2</a>
            <a href="#">Page 3</a>
            <a href="#">Page 4</a>
        </div>
    </nav>

    <div class="content">
        <h1 class="headline">Welcome to an <span class="theme-color">Astro Demo Page</span></h1>
